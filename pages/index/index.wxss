/**index.wxss**/
view,form{
    display:flex;
    flex-direction:column;
}
.input{
    padding:0 12px;
    height:40px;
    font-size:14px;
    font-family: Helvetica Neue,Helvetica,Arial,sans-serif;
    border-color:transparent;
    color:#ffffff;
}
.placeholder{
    color:#eeeeee;
}
.todos {
  margin-top: 20rpx;
}

.todo-item , .done-item{
    min-height: 70rpx;
    background-color: #ffffff;
    align-items:center;
    flex-direction: row;
    border-radius:12rpx;
    margin-bottom:6rpx;
}
.todo-item-check{
    padding:10px;
}
.todo-item-content{
    flex:1;
    font-size: 28rpx;

    text-overflow:ellipsis;

    white-space:nowrap;
    overflow: hidden;
}

.done-item-check{
    padding:10px;
}
.done-item-content{
    flex:1;
    font-size: 28rpx;

    text-overflow:ellipsis;
    text-decoration:line-through;
    color:#666666;
    overflow: hidden;
}
.add-todo {
    background-color: rgba(0,0,0,0.4);
    border-radius:10rpx;
    height:80rpx;


}
.viewDone{
    justify-content:center;
    align-items:center;
    margin:10rpx 0 15rpx 0;
}
.viewDoneBtn{
    width:300rpx;
    height: 60rpx;
    justify-content:center;
    align-items:center;
    border-radius:6px;
    background-color: rgba(0,0,0,0.4);
    color: #eeeeee;
    font-size: 12px;
}

